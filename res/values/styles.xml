<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- To comment out items use this method -->

    <!-- This is code that I created by looking at code from Matt Quigley at:
    http://www.androidengineer.com/2010/06/using-themes-in-android-applications.html -->


    <style name="button_bl">
        <item name="android:background">@drawable/button_bl</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">3sp</item>
        <item name="android:paddingTop">11sp</item>
        <item name="android:paddingBottom">11sp</item>
    </style>

    <style name="MasonFinalTheme" parent="@android:style/Theme.Holo.Light">
          <item name="android:textColor">@color/BlueText</item>
          <item name="android:shadowColor">@color/OrangeShadow</item>
          <item name="android:textSize">14sp</item>
          <item name="android:textStyle">bold</item>
          <item name="android:shadowDy">1.0</item>
          <item name="android:shadowRadius">0.5</item>
      </style>

      <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
          <item name="android:background">#000000</item>
          <item name="android:typeface">monospace</item>
          <item name="android:textSize">10sp</item>
      </style>


  </resources>