<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.DailyFeast"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="19"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/dailypiperguy"
            android:debuggable="true"
            android:theme="@style/MasonFinalTheme">

        <activity android:name=".StartUpActivity"
                  android:label="DailyFeast">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".TodaysEventsActivity"
                  android:label="@string/todays_events_name"
                  android:parentActivityName=".StartUpActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".StartUpActivity"/>
        </activity>
        <activity android:name=".SpecificEventActivity"
                  android:label="@string/specific_events_name"
                  android:parentActivityName=".TodaysEventsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".TodaysEventsActivity"/>
        </activity>
        <activity android:name=".SettingsActivity"
                  android:label="@string/settings_menu"
                  android:parentActivityName=".SettingsActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".StartUpActivity"/>
        </activity>

        <activity android:name=".CreateNewEventActivity"
                  android:label = "Create a new event"
                  android:parentActivityName=".StartUpActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".StartUpActivity"/>
        </activity>
    </application>

    <uses-permission android:name ="android.permission.INTERNET" />

</manifest>
